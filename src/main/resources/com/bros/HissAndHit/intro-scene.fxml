<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0"
      spacing="20.0"
      fx:controller="com.bros.HissAndHit.IntroController">
    <Button mnemonicParsing="false" text="Create Room" textAlignment="CENTER" onAction="#createRoom">
        <font>
            <Font name="Fantasque Sans Mono Bold" size="15.0"/>
        </font>
    </Button>
    <Button mnemonicParsing="false" text="Join Room" textAlignment="CENTER" onAction="#joinRoom">
        <font>
            <Font name="Fantasque Sans Mono Bold" size="15.0"/>
        </font>
    </Button>
</VBox>
